<div class="container body-content">

    <h1>@ViewBag.title</h1>

    @* TODO #1 - Use a loop to display job results in a table. *@
    <table class="job-listing">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Employer</th>
            <th>Location</th>
            <th>Position Type</th>
            <th>Core Competency</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var job in ViewBag.jobs)
        {
            <tr>
                <td>@job.Id</td>
                <td>@job.Name</td>
                <td>@job.Employer</td>
                <td>@job.Location</td>
                <td>@job.PositionType</td>
                <td>@job.CoreCompetency</td>
            </tr>
        }
    </tbody>
</table>


